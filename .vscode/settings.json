{
  // ESLint config
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.workingDirectories": ["./app"],
  "eslint.validate": ["javascript", "javascriptreact"],
  // Prettier config
  "editor.formatOnSave": false,
  "[json]": {
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.formatOnSave": true
  },
  "files.eol": "\n"
}
